        <TextBox x:Name="newMetro" HorizontalAlignment="Left" PreviewTextInput="Metro_PreviewTextInput" Height="33" Margin="138,179,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="283"/>
        <TextBox x:Name="newID" HorizontalAlignment="Left" Height="33" Margin="138,236,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="283"/>
        <Button x:Name="addCrs" Content="Добавить" FontSize="16" Background="Chocolate" FontFamily="Cooper Black" HorizontalAlignment="Left" Height="31" Margin="236,292,0,0" VerticalAlignment="Top" Width="93" Click="addCrs_Click"/>

    </Grid>
